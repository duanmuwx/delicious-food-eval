page {
  --color-primary: #FF8C42;
  --color-primary-light: #FFB380;
  --color-primary-dark: #E07030;
  --color-bg: #FFF8F2;
  --color-card: #FFFFFF;
  --color-text: #333333;
  --color-text-secondary: #999999;
  --color-border: #F0E8E0;
  --color-star-active: #FFB800;
  --color-star-inactive: #E0E0E0;
  --color-danger: #FF4D4F;

  background-color: var(--color-bg);
  color: var(--color-text);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  font-size: 28rpx;
  line-height: 1.5;
}

.container {
  padding: 24rpx;
}

.card {
  background: var(--color-card);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 20rpx;
}

.btn-primary {
  background: var(--color-primary);
  color: #FFFFFF;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 40rpx;
  font-size: 30rpx;
  text-align: center;
}

.btn-primary:active {
  background: var(--color-primary-dark);
}
