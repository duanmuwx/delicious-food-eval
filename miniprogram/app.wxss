page {
  --color-primary: #FF8C42;
  --color-primary-light: #FFB380;
  --color-primary-dark: #E07030;
  --color-bg: #FFF8F2;
  --color-card: #FFFFFF;
  --color-text: #333333;
  --color-text-secondary: #999999;
  --color-border: #F0E8E0;
  --color-star-active: #FFB800;
  --color-star-inactive: #E0E0E0;
  --color-danger: #FF4D4F;

  background-color: var(--color-bg);
  color: var(--color-text);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  font-size: 28rpx;
  line-height: 1.5;
}

.container {
  padding: 24rpx;
}

.card {
  background: var(--color-card);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 20rpx;
}

.btn-primary {
  background: var(--color-primary);
  color: #FFFFFF;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 40rpx;
  font-size: 30rpx;
  text-align: center;
}

.btn-primary:active {
  background: var(--color-primary-dark);
}

/* 图片占位符 */
.image-placeholder {
  background: #F0F0F0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-text {
  font-size: 22rpx;
  color: var(--color-text-secondary);
}

/* 按钮体系 */
.btn-outline {
  background: #FFFFFF;
  color: var(--color-primary);
  border: 2rpx solid var(--color-primary);
  border-radius: 12rpx;
  padding: 16rpx 40rpx;
  font-size: 28rpx;
  text-align: center;
}

.btn-secondary {
  background: var(--color-bg);
  color: var(--color-text-secondary);
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 40rpx;
  font-size: 28rpx;
  text-align: center;
}

.btn-danger {
  font-size: 24rpx;
  color: var(--color-danger);
  padding: 6rpx 20rpx;
  border: 1rpx solid var(--color-danger);
  border-radius: 8rpx;
}

.loading-wrap {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

/* 骨架屏 */
@keyframes skeleton-pulse {
  0% { opacity: 0.6; }
  50% { opacity: 1; }
  100% { opacity: 0.6; }
}

.skeleton {
  background: #F0EBE6;
  border-radius: 8rpx;
  animation: skeleton-pulse 1.5s ease-in-out infinite;
}

.skeleton-card {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: var(--color-card);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.skeleton-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.skeleton-lines {
  flex: 1;
}

.skeleton-line {
  height: 24rpx;
  margin-bottom: 16rpx;
}

.skeleton-line:last-child {
  margin-bottom: 0;
}

.skeleton-line-short {
  width: 40%;
}

.skeleton-line-medium {
  width: 65%;
}

/* 淡入动画 */
@keyframes fade-in {
  from { opacity: 0; }
  to { opacity: 1; }
}

.fade-in {
  animation: fade-in 0.3s ease;
}
