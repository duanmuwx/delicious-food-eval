.dish-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  position: relative;
}

.dish-card-content {
  display: flex;
  flex-direction: row;
  flex: 1;
  align-items: center;
}

.dish-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
}

.dish-image-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #FFF5EE;
  border: 2rpx dashed var(--color-primary);
}

.dish-image-placeholder .camera-icon {
  font-size: 36rpx;
  margin-bottom: 4rpx;
}

.dish-image-placeholder .placeholder-text {
  font-size: 20rpx;
  color: var(--color-primary);
}

.dish-info {
  flex: 1;
}

.dish-name {
  font-size: 32rpx;
  font-weight: 500;
  display: block;
}

.dish-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.high-score-badge {
  font-size: 20rpx;
  color: #fff;
  background: linear-gradient(135deg, #FFB800, #FF8C42);
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
  margin-left: 10rpx;
  white-space: nowrap;
  flex-shrink: 0;
}

.dish-score-row {
  display: flex;
  align-items: center;
}

.score-text {
  font-size: 28rpx;
  color: var(--color-primary);
  font-weight: 600;
  margin-left: 8rpx;
  margin-right: 12rpx;
}

.rating-count {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.dish-actions {
  margin-left: 16rpx;
}

.action-btn {
  font-size: 26rpx;
  color: var(--color-primary);
}

.admin-actions {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  display: flex;
  gap: 16rpx;
}

.edit-btn {
  color: var(--color-primary);
  font-size: 24rpx;
  padding: 8rpx 16rpx;
}

.delete-btn {
  color: var(--color-danger);
  font-size: 24rpx;
  padding: 8rpx 16rpx;
}

.dish-desc {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  margin-bottom: 8rpx;
  display: block;
}
