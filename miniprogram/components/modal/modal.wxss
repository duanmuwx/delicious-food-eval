.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 200;
  display: flex;
  animation: mask-in 0.25s ease;
}

@keyframes mask-in {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-center {
  align-items: center;
  justify-content: center;
}

.modal-center .modal-body {
  width: 85%;
  max-height: 80vh;
  overflow-y: auto;
  padding: 32rpx 24rpx;
  animation: slide-up-center 0.25s ease;
}

@keyframes slide-up-center {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.modal-bottom {
  align-items: flex-end;
}

.modal-bottom .modal-body {
  width: 100%;
  max-height: 75vh;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx 24rpx 0;
  display: flex;
  flex-direction: column;
  animation: slide-up-bottom 0.3s ease;
}

@keyframes slide-up-bottom {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}
