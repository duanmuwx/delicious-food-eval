.week-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.week-nav-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: var(--color-primary);
  background: var(--color-bg);
  border-radius: 50%;
}

.week-nav-btn:active {
  background: var(--color-primary);
  color: #FFFFFF;
}

.week-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text);
}

.grid-header {
  display: flex;
  padding: 16rpx 0;
  margin-bottom: 8rpx;
}

.grid-header-date {
  width: 140rpx;
  flex-shrink: 0;
}

.grid-header-meal {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: var(--color-text-secondary);
  font-weight: 600;
}

.grid-row {
  display: flex;
  align-items: center;
  background: var(--color-card);
  border-radius: 12rpx;
  margin-bottom: 8rpx;
  padding: 16rpx 0;
}

.grid-row-today {
  border-left: 6rpx solid var(--color-primary);
  background: rgba(255, 140, 66, 0.06);
}

.grid-date-cell {
  width: 140rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 8rpx;
}

.grid-day-label {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--color-text);
}

.grid-date-label {
  font-size: 22rpx;
  color: var(--color-text-secondary);
  margin-top: 4rpx;
}

.grid-meal-cell {
  flex: 1;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 6rpx;
  border-radius: 8rpx;
}

.grid-cell-filled {
  background: rgba(255, 140, 66, 0.15);
}

.grid-cell-empty {
  background: var(--color-bg);
  border: 2rpx dashed var(--color-border);
}

.cell-count {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--color-primary);
}

.cell-empty-icon {
  font-size: 32rpx;
  color: var(--color-text-secondary);
}
