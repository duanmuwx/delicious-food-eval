/* 用户资料区域 */
.profile-section {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 24rpx;
  margin-bottom: 24rpx;
}

.profile-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex: 1;
}

.profile-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.profile-avatar-default {
  background-color: var(--color-primary-light);
  display: flex;
  align-items: center;
  justify-content: center;
}

.profile-avatar-text {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.profile-detail {
  display: flex;
  flex-direction: column;
}

.profile-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text);
}

.profile-name-placeholder {
  color: var(--color-text-secondary);
  font-weight: 400;
}

.profile-tip {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  margin-top: 6rpx;
}

.profile-arrow {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

.admin-entry {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 28rpx 24rpx;
  margin-bottom: 24rpx;
}

.admin-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.admin-text {
  flex: 1;
  font-size: 30rpx;
  font-weight: 500;
}

.admin-arrow {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

.stats-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-number {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--color-primary);
}

.stats-label {
  font-size: 24rpx;
  color: var(--color-text-secondary);
  margin-top: 8rpx;
}

.stats-divider {
  width: 1rpx;
  height: 60rpx;
  background-color: #E8E8E8;
}

.section {
  margin-bottom: 20rpx;
}

.history-list {
  margin-top: 8rpx;
}

.history-item {
  padding: 24rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.history-dish-name {
  font-size: 30rpx;
  font-weight: 500;
}

.history-date {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.history-body {
  display: flex;
  flex-direction: column;
}

.history-stars {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}


.history-score {
  font-size: 26rpx;
  color: var(--color-primary);
  font-weight: 600;
  margin-left: 12rpx;
}

.history-comment {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-top: 4rpx;
}

.history-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 12rpx;
}
