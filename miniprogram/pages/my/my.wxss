.admin-entry {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 28rpx 24rpx;
  margin-bottom: 24rpx;
}

.admin-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.admin-text {
  flex: 1;
  font-size: 30rpx;
  font-weight: 500;
}

.admin-arrow {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

.section {
  margin-bottom: 20rpx;
}

.history-list {
  margin-top: 8rpx;
}

.history-item {
  padding: 24rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.history-dish-name {
  font-size: 30rpx;
  font-weight: 500;
}

.history-date {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.history-body {
  display: flex;
  flex-direction: column;
}

.history-stars {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.star-char {
  font-size: 28rpx;
  color: var(--color-star-inactive);
  margin-right: 2rpx;
}

.star-char.active {
  color: var(--color-star-active);
}

.history-score {
  font-size: 26rpx;
  color: var(--color-primary);
  font-weight: 600;
  margin-left: 12rpx;
}

.history-comment {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-top: 4rpx;
}

.loading-wrap {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}
