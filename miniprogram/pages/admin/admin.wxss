.weekly-entry {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: rgba(255, 140, 66, 0.1);
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 20rpx;
}

.weekly-entry-text {
  font-size: 28rpx;
  color: var(--color-primary);
  font-weight: 500;
}

.weekly-entry-arrow {
  font-size: 24rpx;
  color: var(--color-primary);
}

.form-section {
  padding: 32rpx 24rpx;
}

.form-item {
  margin-bottom: 28rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: var(--color-bg);
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-picker {
  height: 80rpx;
  line-height: 80rpx;
  background: var(--color-bg);
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.image-upload-area {
  display: flex;
}

.image-upload-btn {
  width: 160rpx;
  height: 160rpx;
  background: var(--color-bg);
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed var(--color-border);
}

.upload-icon {
  font-size: 48rpx;
  color: var(--color-text-secondary);
  line-height: 1;
}

.upload-text {
  font-size: 22rpx;
  color: var(--color-text-secondary);
  margin-top: 8rpx;
}

.image-preview-wrap {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.image-preview {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
}

.image-remove {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 40rpx;
  height: 40rpx;
  background: var(--color-danger);
  color: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.submit-btn {
  width: 100%;
  margin-top: 16rpx;
}

.btn-import {
  width: 100%;
  margin-top: 16rpx;
  background: #FFFFFF;
  color: var(--color-primary);
  font-size: 28rpx;
  border: 2rpx solid var(--color-primary);
  border-radius: 12rpx;
}

.section {
  margin-top: 24rpx;
  margin-bottom: 20rpx;
}

.loading-wrap {
  display: flex;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 200;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 85%;
  max-height: 80vh;
  overflow-y: auto;
  padding: 32rpx 24rpx;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  background: var(--color-bg);
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-btns {
  display: flex;
  gap: 20rpx;
  margin-top: 24rpx;
}

.modal-btns button {
  flex: 1;
}

.btn-cancel {
  background: var(--color-bg);
  color: var(--color-text-secondary);
  font-size: 28rpx;
  border-radius: 12rpx;
}

/* 分享提示条 */
.share-prompt {
  background: rgba(255, 140, 66, 0.1);
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.share-prompt-text {
  font-size: 26rpx;
  color: var(--color-primary);
  flex: 1;
}

.share-prompt-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-shrink: 0;
}

.share-prompt-btn {
  font-size: 24rpx;
  background: var(--color-primary);
  color: #FFFFFF;
  border-radius: 8rpx;
  padding: 0 24rpx;
  height: 56rpx;
  line-height: 56rpx;
  border: none;
  min-height: 0;
}

.share-prompt-dismiss {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.btn-share {
  width: 100%;
  margin-top: 20rpx;
  background: var(--color-primary);
  color: #FFFFFF;
  font-size: 28rpx;
  border-radius: 12rpx;
  border: none;
}

/* 历史导入弹窗 */
.import-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 200;
  display: flex;
  align-items: flex-end;
}

.import-popup {
  width: 100%;
  max-height: 75vh;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx 24rpx 0;
  display: flex;
  flex-direction: column;
}

.import-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.import-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: var(--color-text-secondary);
}

.import-search {
  margin-bottom: 20rpx;
}

.import-list {
  flex: 1;
  max-height: 50vh;
}

.import-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--color-border);
}

.import-item-selected {
  background: rgba(255, 140, 66, 0.08);
}

.import-check {
  font-size: 36rpx;
  margin-right: 16rpx;
  color: var(--color-text-secondary);
}

.import-item-selected .import-check {
  color: var(--color-primary);
}

.import-thumb {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.import-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.import-name {
  font-size: 28rpx;
  color: var(--color-text);
}

.import-date {
  font-size: 22rpx;
  color: var(--color-text-secondary);
  margin-top: 4rpx;
}

.import-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.import-count {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

.import-confirm-btn {
  width: auto;
  padding: 0 40rpx;
  font-size: 28rpx;
}
