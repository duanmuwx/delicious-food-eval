.form-section {
  padding: 32rpx 24rpx;
}

.form-item {
  margin-bottom: 28rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: var(--color-bg);
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-picker {
  height: 80rpx;
  line-height: 80rpx;
  background: var(--color-bg);
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.image-upload-area {
  display: flex;
}

.image-upload-btn {
  width: 160rpx;
  height: 160rpx;
  background: var(--color-bg);
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed var(--color-border);
}

.upload-icon {
  font-size: 48rpx;
  color: var(--color-text-secondary);
  line-height: 1;
}

.upload-text {
  font-size: 22rpx;
  color: var(--color-text-secondary);
  margin-top: 8rpx;
}

.image-preview-wrap {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.image-preview {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
}

.image-remove {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 40rpx;
  height: 40rpx;
  background: var(--color-danger);
  color: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.submit-btn {
  width: 100%;
  margin-top: 16rpx;
}

.section {
  margin-top: 24rpx;
  margin-bottom: 20rpx;
}

.history-dropdown {
  position: absolute;
  left: 0;
  right: 0;
  top: 130rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  max-height: 400rpx;
  overflow-y: auto;
}

.history-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid var(--color-border);
  font-size: 28rpx;
}

.history-option:last-child {
  border-bottom: none;
}

.history-date-hint {
  font-size: 22rpx;
  color: var(--color-text-secondary);
}

.loading-wrap {
  display: flex;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 200;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 85%;
  max-height: 80vh;
  overflow-y: auto;
  padding: 32rpx 24rpx;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  background: var(--color-bg);
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-btns {
  display: flex;
  gap: 20rpx;
  margin-top: 24rpx;
}

.modal-btns button {
  flex: 1;
}

.btn-cancel {
  background: var(--color-bg);
  color: var(--color-text-secondary);
  font-size: 28rpx;
  border-radius: 12rpx;
}
