.avatar-section {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.section-label {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--color-text);
}

.avatar-btn {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  line-height: normal;
}

.avatar-btn::after {
  border: none;
}

.avatar-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.avatar-default {
  background-color: #F5F5F5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-default-text {
  font-size: 22rpx;
  color: var(--color-text-secondary);
}

/* 模式切换 */
.mode-section {
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.mode-tabs {
  display: flex;
  margin-top: 16rpx;
  background-color: #F5F5F5;
  border-radius: 8rpx;
  padding: 4rpx;
}

.mode-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: var(--color-text-secondary);
  border-radius: 6rpx;
}

.mode-tab.active {
  background-color: var(--color-primary);
  color: #FFFFFF;
  font-weight: 500;
}

/* 昵称输入 */
.nickname-section {
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.nickname-input {
  margin-top: 16rpx;
  padding: 20rpx;
  background-color: #F5F5F5;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.input-tip {
  display: block;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

/* 保存按钮 */
.save-section {
  margin-top: 40rpx;
  padding: 0 24rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
}
