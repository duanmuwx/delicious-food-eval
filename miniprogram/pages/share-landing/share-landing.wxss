.header {
  text-align: center;
  padding: 32rpx 0 16rpx;
}

.header-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: var(--color-primary);
}

.header-sub {
  display: block;
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-top: 8rpx;
}

.loading-wrap {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}

.bottom-bar {
  padding: 32rpx 24rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

.btn-home {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: var(--color-primary);
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 16rpx;
  border: none;
}
