.dish-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 24rpx;
}

.dish-detail-image {
  width: 240rpx;
  height: 240rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  background: #f5f5f5;
}

.contributor-text {
  font-size: 22rpx;
  color: var(--color-text-secondary);
  margin-bottom: 16rpx;
}

.upload-guide {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 240rpx;
  height: 240rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  background: #FFF5EE;
  border: 2rpx dashed var(--color-primary);
}

.upload-guide-icon {
  font-size: 56rpx;
  margin-bottom: 8rpx;
}

.upload-guide-text {
  font-size: 22rpx;
  color: var(--color-primary);
  text-align: center;
  padding: 0 16rpx;
}

.upload-guide-hint {
  font-size: 20rpx;
  color: var(--color-text-secondary);
  margin-top: 8rpx;
}

.dish-detail-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.dish-detail-stats {
  display: flex;
  align-items: center;
}

.avg-score {
  font-size: 32rpx;
  color: var(--color-primary);
  font-weight: 600;
  margin-right: 16rpx;
}

.rating-count-text {
  font-size: 26rpx;
  color: var(--color-text-secondary);
}

.rating-section {
  padding: 32rpx 24rpx;
}

.star-row {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 0;
}

.score-display {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--color-primary);
  margin-left: 20rpx;
}

.comment-area {
  position: relative;
  margin-bottom: 30rpx;
}

.comment-input {
  width: 100%;
  height: 160rpx;
  background: var(--color-bg);
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.char-count {
  position: absolute;
  right: 20rpx;
  bottom: 16rpx;
  font-size: 22rpx;
  color: var(--color-text-secondary);
}

.submit-btn {
  width: 100%;
  margin-top: 10rpx;
}

.view-comments-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  margin-top: 20rpx;
  background: #fff;
  border-radius: 12rpx;
}

.view-comments-text {
  font-size: 30rpx;
  color: var(--color-text);
}

.view-comments-arrow {
  font-size: 36rpx;
  color: var(--color-text-secondary);
}

.loading-wrap {
  padding: 200rpx 0;
}
