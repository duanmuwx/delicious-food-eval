.tab-bar {
  display: flex;
  background: var(--color-card);
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 24rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: var(--color-text-secondary);
  border-radius: 12rpx;
}

.tab-item.active {
  background: var(--color-primary);
  color: #FFFFFF;
  font-weight: 600;
}

.rank-list {
  margin-top: 8rpx;
}

.rank-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 24rpx;
}

.rank-number {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #F0F0F0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-text-secondary);
  margin-right: 20rpx;
  flex-shrink: 0;
}

.rank-number.top-three {
  background: var(--color-primary);
  color: #FFFFFF;
}

.rank-dish-image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.rank-dish-image-placeholder {
  background: #F0F0F0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-text {
  font-size: 20rpx;
  color: var(--color-text-secondary);
}

.rank-info {
  flex: 1;
  min-width: 0;
}

.rank-dish-name {
  font-size: 30rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 6rpx;
}

.rank-stats {
  display: flex;
  align-items: center;
}

.rank-score {
  font-size: 26rpx;
  color: var(--color-primary);
  font-weight: 600;
  margin-right: 16rpx;
}

.rank-count {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.rank-star {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-shrink: 0;
  margin-left: 12rpx;
}

.rank-stars-row {
  display: flex;
  flex-direction: row;
}

.rank-star-wrapper {
  position: relative;
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  margin-right: 2rpx;
  font-size: 28rpx;
}

.rank-star-half {
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
  color: var(--color-star-inactive);
  font-size: inherit;
  line-height: 1;
  height: 28rpx;
}

.rank-star-half.active {
  color: var(--color-star-active);
}

.rank-star-left {
  width: 50%;
  z-index: 1;
}

.rank-star-right {
  width: 100%;
  z-index: 0;
}

.star-value {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-primary);
}

.loading-wrap {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}
