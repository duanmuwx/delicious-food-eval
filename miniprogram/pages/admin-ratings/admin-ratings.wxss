.rating-list {
  margin-top: 8rpx;
}

.rating-item {
  padding: 24rpx;
}

.rating-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.rating-user {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  font-family: monospace;
}

.rating-date {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.rating-body {
  display: flex;
  flex-direction: column;
}

.rating-stars {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.star-char {
  font-size: 28rpx;
  color: var(--color-star-inactive);
  margin-right: 2rpx;
}

.star-char.active {
  color: var(--color-star-active);
}

.rating-score {
  font-size: 26rpx;
  color: var(--color-primary);
  font-weight: 600;
  margin-left: 12rpx;
}

.rating-comment {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-top: 4rpx;
}

.rating-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 12rpx;
}

.delete-rating-btn {
  font-size: 24rpx;
  color: var(--color-danger);
  padding: 6rpx 20rpx;
  border: 1rpx solid var(--color-danger);
  border-radius: 8rpx;
}

.loading-wrap {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: var(--color-text-secondary);
}
