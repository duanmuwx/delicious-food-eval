.rating-list {
  margin-top: 8rpx;
}

.rating-item {
  padding: 24rpx;
}

.rating-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.rating-user {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  font-family: monospace;
}

.rating-date {
  font-size: 24rpx;
  color: var(--color-text-secondary);
}

.rating-body {
  display: flex;
  flex-direction: column;
}

.rating-stars {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}


.rating-score {
  font-size: 26rpx;
  color: var(--color-primary);
  font-weight: 600;
  margin-left: 12rpx;
}

.rating-comment {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-top: 4rpx;
}

.rating-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 12rpx;
}
